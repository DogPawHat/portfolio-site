---
import { SITE_DESCRIPTION, SITE_TITLE } from "../consts";
import SiteLayout from "../layouts/SiteLayout.astro";

import Cursor from "../icons/tech/Cursor.astro";
import Nextjs from "../icons/tech/Nextjs.astro";
import Node from "../icons/tech/Node.astro";
import React from "../icons/tech/React.astro";
import Tanstack from "../icons/tech/Tanstack.astro";
import Typescript from "../icons/tech/Typescript.astro";
---

<SiteLayout title={SITE_TITLE} description={SITE_DESCRIPTION} activeLink="home">
  <div class="prose prose-invert prose-lg max-w-none">
    <h2 class="text-3xl font-bold text-white mb-6">Welcome!</h2>

    <p>
      I'm a software engineer based in Dublin, Ireland with over 8 years of
      building web applications.
    </p>
    <h3>Skills</h3>

    <div class="grid grid-cols-2 md:grid-cols-4 gap-6 my-6">
      <React />
      <Nextjs />
      <Node />
      <Typescript />
      <Cursor />
      <Tanstack />
    </div>

    <h3>Recent Projects</h3>

    <div class="space-y-6 my-6">
      <div class="bg-gray-800 p-6 rounded-lg">
        <h4 class="text-xl font-medium text-white mb-2">Project Name</h4>
        <p class="text-gray-300 mb-4">
          A brief description of the project and what technologies were used.
        </p>
        <div class="flex space-x-4">
          <a href="#" class="text-indigo-400 hover:text-indigo-300">View Demo</a
          >
          <a href="#" class="text-indigo-400 hover:text-indigo-300">GitHub</a>
        </div>
      </div>

      <div class="bg-gray-800 p-6 rounded-lg">
        <h4 class="text-xl font-medium text-white mb-2">Another Project</h4>
        <p class="text-gray-300 mb-4">
          A brief description of the project and what technologies were used.
        </p>
        <div class="flex space-x-4">
          <a href="#" class="text-indigo-400 hover:text-indigo-300">View Demo</a
          >
          <a href="#" class="text-indigo-400 hover:text-indigo-300">GitHub</a>
        </div>
      </div>
    </div>
  </div>
</SiteLayout>
