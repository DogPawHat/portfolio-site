---
import BaseHead from "../components/BaseHead.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body class="bg-gray-900 text-gray-100">
    <div class="flex flex-col md:flex-row min-h-screen">
      <!-- Sidebar -->
      <aside class="w-full md:w-64 lg:w-72 bg-gray-800 md:min-h-screen">
        <div
          class="sticky top-0 p-4 md:p-6 flex flex-col items-center md:items-start h-full"
        >
          <!-- Photo placeholder -->
          <div
            class="w-32 h-32 bg-gray-700 rounded-full overflow-hidden flex items-center justify-center border-2 border-indigo-500 mb-6"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-16 w-16 text-gray-500"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="1.5"
                d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"
              ></path>
            </svg>
          </div>

          <!-- Name and description -->
          <div class="text-center md:text-left mb-8">
            <h1 class="text-2xl font-bold text-white mb-2">Ciar√°n Curley</h1>
            <p class="text-gray-400">Software Engineer from Dublin, Ireland</p>
          </div>

          <!-- Navigation Links -->
          <nav class="w-full mt-4">
            <ul class="space-y-2">
              <li>
                <a
                  href="/"
                  class="flex items-center px-4 py-3 text-white bg-indigo-600 rounded-md"
                >
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    class="h-5 w-5 mr-3"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"
                    ></path>
                  </svg>
                  Home
                </a>
              </li>
              <li>
                <a
                  href="/blog"
                  class="flex items-center px-4 py-3 text-gray-300 hover:bg-gray-700 rounded-md transition-colors duration-200"
                >
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    class="h-5 w-5 mr-3"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z"
                    ></path>
                  </svg>
                  Blog
                </a>
              </li>
            </ul>
          </nav>

          <!-- Contact Information -->
          <div class="w-full mt-8 pt-6 border-t border-gray-700">
            <h2
              class="text-lg font-medium text-white mb-4 text-center md:text-left"
            >
              Contact
            </h2>

            <!-- Email -->
            <div
              class="flex items-center mb-4 text-gray-400 hover:text-indigo-400 transition-colors"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-5 w-5 mr-3 flex-shrink-0"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                ></path>
              </svg>
              <a href="mailto:hello@example.com" class="truncate"
                >hello@example.com</a
              >
            </div>

            <!-- Location -->
            <div class="flex items-center mb-4 text-gray-400">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-5 w-5 mr-3 flex-shrink-0"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                ></path>
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
              </svg>
              <span>Dublin, Ireland</span>
            </div>
          </div>

          <!-- Social Links -->
          <div class="mt-auto pt-6 w-full">
            <div class="flex justify-center md:justify-start space-x-4">
              <a
                href="#"
                class="text-gray-400 hover:text-indigo-400 transition-colors"
              >
                <span class="sr-only">Twitter</span>
                <svg
                  class="h-6 w-6"
                  fill="currentColor"
                  viewBox="0 0 24 24"
                  aria-hidden="true"
                >
                  <path
                    d="M8.29 20.251c7.547 0 11.675-6.253 11.675-11.675 0-.178 0-.355-.012-.53A8.348 8.348 0 0022 5.92a8.19 8.19 0 01-2.357.646 4.118 4.118 0 001.804-2.27 8.224 8.224 0 01-2.605.996 4.107 4.107 0 00-6.993 3.743 11.65 11.65 0 01-8.457-4.287 4.106 4.106 0 001.27 5.477A4.072 4.072 0 012.8 9.713v.052a4.105 4.105 0 003.292 4.022 4.095 4.095 0 01-1.853.07 4.108 4.108 0 003.834 2.85A8.233 8.233 0 012 18.407a11.616 11.616 0 006.29 1.84"
                  ></path>
                </svg>
              </a>
              <a
                href="#"
                class="text-gray-400 hover:text-indigo-400 transition-colors"
              >
                <span class="sr-only">GitHub</span>
                <svg
                  class="h-6 w-6"
                  fill="currentColor"
                  viewBox="0 0 24 24"
                  aria-hidden="true"
                >
                  <path
                    fill-rule="evenodd"
                    d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z"
                    clip-rule="evenodd"></path>
                </svg>
              </a>
              <a
                href="#"
                class="text-gray-400 hover:text-indigo-400 transition-colors"
              >
                <span class="sr-only">LinkedIn</span>
                <svg
                  class="h-6 w-6"
                  fill="currentColor"
                  viewBox="0 0 24 24"
                  aria-hidden="true"
                >
                  <path
                    fill-rule="evenodd"
                    d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"
                    clip-rule="evenodd"></path>
                </svg>
              </a>
            </div>
          </div>
        </div>
      </aside>

      <!-- Main Content -->
      <main class="flex-1 p-4 md:p-8">
        <div class="max-w-3xl mx-auto">
          <h2 class="text-3xl font-bold text-white mb-6">
            Welcome to my portfolio
          </h2>

          <div class="prose prose-invert prose-lg max-w-none">
            <p>
              Hello! I'm a software engineer based in Dublin, Ireland. I
              specialize in building high-quality web applications with modern
              technologies.
            </p>

            <p>
              This portfolio showcases some of my projects and blog posts about
              software development, technology, and other topics I'm passionate
              about.
            </p>

            <h3>Skills</h3>

            <div class="grid grid-cols-2 md:grid-cols-3 gap-4 my-6">
              <div class="bg-gray-800 p-4 rounded-lg">
                <div class="text-indigo-400 font-medium mb-2">Frontend</div>
                <ul class="text-gray-300 text-sm space-y-1">
                  <li>React</li>
                  <li>TypeScript</li>
                  <li>Tailwind CSS</li>
                </ul>
              </div>

              <div class="bg-gray-800 p-4 rounded-lg">
                <div class="text-indigo-400 font-medium mb-2">Backend</div>
                <ul class="text-gray-300 text-sm space-y-1">
                  <li>Node.js</li>
                  <li>Express</li>
                  <li>PostgreSQL</li>
                </ul>
              </div>

              <div class="bg-gray-800 p-4 rounded-lg">
                <div class="text-indigo-400 font-medium mb-2">Tools</div>
                <ul class="text-gray-300 text-sm space-y-1">
                  <li>Git</li>
                  <li>Docker</li>
                  <li>CI/CD</li>
                </ul>
              </div>
            </div>

            <h3>Recent Projects</h3>

            <div class="space-y-6 my-6">
              <div class="bg-gray-800 p-6 rounded-lg">
                <h4 class="text-xl font-medium text-white mb-2">
                  Project Name
                </h4>
                <p class="text-gray-300 mb-4">
                  A brief description of the project and what technologies were
                  used.
                </p>
                <div class="flex space-x-4">
                  <a href="#" class="text-indigo-400 hover:text-indigo-300"
                    >View Demo</a
                  >
                  <a href="#" class="text-indigo-400 hover:text-indigo-300"
                    >GitHub</a
                  >
                </div>
              </div>

              <div class="bg-gray-800 p-6 rounded-lg">
                <h4 class="text-xl font-medium text-white mb-2">
                  Another Project
                </h4>
                <p class="text-gray-300 mb-4">
                  A brief description of the project and what technologies were
                  used.
                </p>
                <div class="flex space-x-4">
                  <a href="#" class="text-indigo-400 hover:text-indigo-300"
                    >View Demo</a
                  >
                  <a href="#" class="text-indigo-400 hover:text-indigo-300"
                    >GitHub</a
                  >
                </div>
              </div>
            </div>
          </div>
        </div>
      </main>
    </div>
  </body>
</html>
