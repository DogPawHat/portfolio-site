---
interface Props {
  activeLink?: "home" | "blog";
}

import Bluesky from "../icons/Bluesky.astro";
import Github from "../icons/Github.astro";
import House from "../icons/House.astro";
import Linkedin from "../icons/Linkedin.astro";
import Mail from "../icons/Mail.astro";
import NewsPaper from "../icons/NewsPaper.astro";
import UserRound from "../icons/UserRound.astro";
const { activeLink = "home" } = Astro.props;
---

<aside class="w-full md:w-64 lg:w-72 bg-gray-800 md:min-h-screen">
  <div
    class="sticky top-0 p-4 md:p-6 flex flex-col items-center md:items-start h-full"
  >
    <!-- Photo placeholder -->
    <div
      class="w-32 h-32 bg-gray-700 rounded-full overflow-hidden flex items-center justify-center border-2 border-indigo-500 mb-6"
    >
      <UserRound className="w-16 h-16 text-gray-500" />
    </div>

    <!-- Name and description -->
    <div class="text-center md:text-left mb-8">
      <h1 class="text-2xl font-bold text-white mb-2">Ciar√°n Curley</h1>
    </div>

    <!-- Navigation Links -->
    <nav class="w-full mt-4">
      <ul class="space-y-2">
        <li>
          <a
            href="/"
            class={`flex items-center py-3 transition-colors duration-200 ${activeLink === "home" ? "text-white border-b-2 border-indigo-500" : "text-gray-300 hover:text-white border-b-2 border-transparent"}`}
          >
            <House className="w-5 h-5 mr-3" />
            Home
          </a>
        </li>
        <li>
          <a
            href="/blog"
            class={`flex items-center py-3 transition-colors duration-200 ${activeLink === "blog" ? "text-white border-b-2 border-indigo-500" : "text-gray-300 hover:text-white border-b-2 border-transparent"}`}
          >
            <NewsPaper className="w-5 h-5 mr-3" />
            Blog
          </a>
        </li>
      </ul>
    </nav>

    <!-- Contact Information -->
    <div class="w-full mt-8 pt-6 border-t border-gray-700">
      <h2 class="text-lg font-medium text-white mb-4 text-center md:text-left">
        Contact
      </h2>

      <!-- Email -->
      <div class="flex items-center mb-4 group transition-colors">
        <a
          href="mailto:ciaran.curley.11.11@gmail.com"
          class="flex items-center truncate group-hover:text-indigo-400"
        >
          <Mail
            className="w-5 h-5 mr-3 text-gray-400 group-hover:text-indigo-400"
          />
          ciaran.curley.11.11@gmail.com
        </a>
      </div>

      <!-- Bluesky -->
      <div class="flex items-center mb-4 group transition-colors">
        <a
          href="https://bsky.app/profile/dogpawhat"
          class="flex items-center truncate group-hover:text-indigo-400"
        >
          <Bluesky
            className="w-5 h-5 mr-3 text-gray-400 group-hover:text-indigo-400"
          />
          bsky.app/profile/dogpawhat
        </a>
      </div>

      <!-- GitHub -->
      <div class="flex items-center mb-4 group transition-colors">
        <a
          href="https://github.com/dogpawhat"
          class="flex items-center truncate group-hover:text-indigo-400"
        >
          <Github
            className="w-5 h-5 mr-3 text-gray-400 group-hover:text-indigo-400"
          />
          github.com/dogpawhat
        </a>
      </div>

      <!-- LinkedIn -->
      <div class="flex items-center mb-4 group transition-colors">
        <a
          href="https://www.linkedin.com/in/dogpawhat/"
          class="flex items-center truncate group-hover:text-indigo-400"
        >
          <Linkedin
            className="w-5 h-5 mr-3 text-gray-400 group-hover:text-indigo-400"
          />
          linkedin.com/in/dogpawhat/
        </a>
      </div>
    </div>
  </div>
</aside>
